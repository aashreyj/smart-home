<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.homecontroller">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application

            android:name=".MyApplication"
            android:usesCleartextTraffic="true"
            android:allowBackup="true"
            android:icon="@drawable/smart_home"
            android:label="@string/app_name"
            android:roundIcon="@drawable/smart_home"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".Sensor_Data">
        </activity>
        <activity android:name=".Sensor_Log">
        </activity>
        <activity android:name=".Device_control">
        </activity>
        <activity android:name=".Show_deviceLog">
        </activity>
        <activity android:name=".show_devices">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>